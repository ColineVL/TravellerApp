<p style="color: green"><%= notice %></p>

<h1>Users</h1>

<div id="users">
  <% @users.each do |user| %>
    <p>
      <% if user.avatar.present? %>
        <%= image_tag user.avatar.url(:thumb) %>
      <% end %>
      <%= link_to user.name, user %> | <%= user.email %>
    </p>
  <% end %>
</div>

<%= link_to "New user", new_user_path %>
