<p style="color: green"><%= notice %></p>

<h1>Posts</h1>

<div id="posts">
  <% @posts.each do |post| %>
    <%= render post %>
    <% if post.photo.present? %>
      <p><%= image_tag post.photo.url(:thumb) %></p>
    <% end %>
    <p>
      <%= link_to "Show this post", post %>
    </p>
  <% end %>
</div>
